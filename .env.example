# Local Data Engineering Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
# Path to DuckDB database file (relative to project root)
DUCKDB_PATH=local_data_pipeline.duckdb

# Dataset name in DuckDB
DATASET_NAME=sales_analytics

# Data Directories
# Input data directory
DATA_DIR=data

# Output directory for analysis results
OUTPUT_DIR=output

# Data Quality Thresholds
# Maximum percentage of null values allowed (0-100)
MAX_NULL_PERCENTAGE=5

# Minimum number of records required
MIN_RECORD_COUNT=1

# Pipeline Configuration
# Write disposition: replace, append, or merge
WRITE_DISPOSITION=replace

# Enable/disable data quality checks (true/false)
ENABLE_QUALITY_CHECKS=true

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable detailed logging (true/false)
VERBOSE_LOGGING=false

# Export Configuration
# Include timestamp in export filenames (true/false)
TIMESTAMP_EXPORTS=true

# Export format: csv, parquet, json
EXPORT_FORMAT=csv

# Advanced Configuration (Optional)
# Number of rows to display in preview
PREVIEW_ROWS=10

# DuckDB memory limit (e.g., 2GB, 500MB)
# Leave empty for automatic
DUCKDB_MEMORY_LIMIT=

# Number of threads for DuckDB
# Leave empty for automatic
DUCKDB_THREADS=
